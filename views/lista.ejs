        <script>
            var cont = 1;
            //https://api.jquery.com/click/
            $('#add-campo').click(function () {
                cont++;
                //https://api.jquery.com/append/
                $('#formulario').append('<div class="form-group" id="campo' + cont + '"><input class="form-control" type="text" name="produto" placeholder="Produto"> <br> <button type="button" id="' + cont + '" class="btn btn-dark bg-dark btn-apagar"> - </button></div>');
            });

            $('form').on('click', '.btn-apagar', function () {
                var button_id = $(this).attr("id");
                $('#campo' + button_id + '').remove();
            });
